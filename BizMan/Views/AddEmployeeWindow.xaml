<Window x:Class="BizMan.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BizMan"
        mc:Ignorable="d"
        Title="AddEmployeeWindow" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <Label Content="Id"/>
                <TextBox Text="{Binding ID}" Margin="0,0,0,10"/>
                
                <Label Content="First Name"/>
                <TextBox Text="{Binding FirstName}" Margin="0,0,0,10"/>

                <Label Content="Last Name"/>
                <TextBox Text="{Binding LastName}" Margin="0,0,0,10"/>

                <Label Content="Position"/>
                <TextBox Text="{Binding Position}" Margin="0,0,0,10"/>

                <Label Content="Department"/>
                <TextBox Text="{Binding Department}" Margin="0,0,0,10"/>

                <Label Content="Hire Date"/>
                <DatePicker SelectedDate="{Binding HireDate}" Margin="0,0,0,10"/>

                <Label Content="Salary"/>
                <TextBox Text="{Binding Salary}" Margin="0,0,0,10"/>

                <Label Content="Email"/>
                <TextBox Text="{Binding Email}" Margin="0,0,0,10"/>

                <Label Content="Phone Number"/>
                <TextBox Text="{Binding PhoneNumber}" Margin="0,0,0,10"/>

                <Label Content="Address"/>
                <TextBox Text="{Binding Address}" Margin="0,0,0,10"/>

                <Label Content="City"/>
                <TextBox Text="{Binding City}" Margin="0,0,0,10"/>

                <Label Content="County"/>
                <TextBox Text="{Binding County}" Margin="0,0,0,10"/>

                <Label Content="Post Code"/>
                <TextBox Text="{Binding PostCode}" Margin="0,0,0,10"/>

                <Label Content="Country"/>
                <TextBox Text="{Binding Country}" Margin="0,0,0,10"/>

                <Label Content="Date of Birth"/>
                <DatePicker SelectedDate="{Binding DateOfBirth}" Margin="0,0,0,10"/>
                
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
                <Button Content="Save" Width="80" Margin="0,0,10,0" Click="Save_Click"/>
                <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
